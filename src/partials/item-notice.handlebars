<section class="oc-item-notices mt-4">
    <div class="container oc-item-notices__cont p-4">
        <div class="row p-0">
            <div class="oc-item-notices__cont__img-notice  col-12 col-md-4">
                <img src={{img-notice}} alt="" class="">
            </div>
            <div class="oc-item-notices__cont__desc col-12 col-md-8">
                <button><span>{{category}}</span></button>
                <h2 class="mt-3">{{title}}</h2>
                <hr>
                <p class="mt-3">{{desc-notice}}</p>
                <div class="oc-item-notices__cont__info-adic d-flex justify-content-between">
                    <span>{{date-notice}}</span>
                    <span class="btn-view"><a href="#">Leer más → </a></span>
                </div>
            </div>
        </div>
    </div>
</section>