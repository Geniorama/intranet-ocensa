<section class="oc-item-notices mt-4">
    <div class="container oc-item-notices__cont p-4">
        <div class="row p-0">
            <div class="oc-item-notices__cont__img-notice col-4">
                <img src={{img-notice}} alt="" class="">
            </div>
            <div class="oc-item-notices__cont__desc col-8">
                <button><span>{{category}}</span></button>
                <h2 class="mt-3">{{title}}</h2>
                <hr>
                <p class="mt-3 d-none d-md-block">{{desc-notice}}</p>
                <div class="oc-item-notices__cont__info-adic d-flex justify-content-between align-items-center">
                    <span>{{date-notice}}</span>
                    <span class="btn-view">
                        <a href="#" class="d-flex align-items-center">
                            Leer más 
                            <span style="color: #19A500; font-size: 25px; margin-left: 10px; margin-bottom: 5px">→</span></a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>